<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base shadow for depth -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
            <corners android:radius="4dp" />
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="8dp" />
        </shape>
    </item>
    <!-- Frame itself -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#DAA520" /> <!-- Gold color, adjust as needed -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Optional: Inner shadow or bevel effect -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#A0522D" /> <!-- Darker edge for depth -->
        </shape>
    </item>
</layer-list>
