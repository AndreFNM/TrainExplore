<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapDirecoesActivity">

    <!-- Navigation Instructions -->
    <TextView
        android:id="@+id/navigationInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Navigation Instructions Here"
        android:textSize="18sp"
        android:gravity="center"
        android:background="#66000000"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/navigationInstructions"
        app:layout_constraintBottom_toTopOf="@+id/modeSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mode Selector -->
    <RadioGroup
        android:id="@+id/modeSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/drivingMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carro" />

        <RadioButton
            android:id="@+id/walkingMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Pé" />

        <RadioButton
            android:id="@+id/transitMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transportes Públicos" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
